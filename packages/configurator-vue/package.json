{
    "name": "@hayadev/configurator-vue",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --port 5002",
        "watch": "vue-tsc --noEmit --watch",
        "build": "run-p build:*",
        "build:lib": "vite build && vue-tsc --declaration --emitDeclarationOnly && tailwindcss -i ./src/style.css -o ./dist/index.css --postcss --minify",
        "build:app": "vite -c vite-app.config.ts build",
        "preview": "vite preview -c vite-app.config.ts",
        "lint": "vue-tsc --noEmit",
        "test": "jest"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.umd.cjs"
        },
        "./dist/index.css": {
            "import": "./dist/index.css",
            "require": "./dist/index.css"
        }
    },
    "style": "dist/index.css",
    "dependencies": {
        "@element-plus/icons-vue": "^2.3.1",
        "@hayadev/configurator": "workspace:*",
        "@paralleldrive/cuid2": "^2.2.2",
        "capitalize": "^2.0.4",
        "deepcopy": "^2.1.0",
        "element-plus": "^2.7.3",
        "ts-pattern": "^5.1.1",
        "vue": "^3.4.21",
        "vuedraggable": "^4.1.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@hayadev/samples": "workspace:*",
        "@iconify-json/ep": "^1.1.15",
        "@types/capitalize": "^2.0.2",
        "@vitejs/plugin-vue": "^5.0.4",
        "autoprefixer": "^10.4.19",
        "postcss": "^8.4.38",
        "sass": "^1.77.2",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.2.2",
        "unplugin-auto-import": "^0.17.6",
        "unplugin-icons": "^0.19.0",
        "unplugin-vue-components": "^0.27.0",
        "vite": "^5.2.0",
        "vite-plugin-filter-replace": "^0.1.13",
        "vue-tsc": "^2.0.6",
        "vue3-json-viewer": "^2.2.2"
    }
}
