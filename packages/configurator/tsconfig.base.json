{
    "compilerOptions": {
        "target": "ES2020",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "paths": {
            "@/*": ["./src/*"],
            "@gaia/configurator": ["./src/index"],
            "@gaia/configurator/*": ["./src/*"]
        }
    }
}
